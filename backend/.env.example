# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
MONGODB_URI=your_mongodb_connection_string

# JWT Configuration - CHANGE THIS TO A SECURE SECRET!
JWT_SECRET=your_jwt_secret
JWT_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
CLIENT_URL=http://localhost:3000

# Email Configuration (Gmail App Password)
EMAIL_FROM=your_email@example.com
EMAIL_USER=your_email@example.com
EMAIL_PASSWORD=your_email_password
EMAIL_SERVICE=gmail

# Redis Configuration (for session management)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Guest Session Configuration
GUEST_SESSION_DURATION=180          # 3 hours default
GUEST_SESSION_IDLE_TIMEOUT=30       # 30 minutes idle timeout
GUEST_SESSION_MAX_DURATION=480      # 8 hours maximum duration

# IP Geolocation Settings
GEOLOCATION_CACHE_DURATION=86400    # 24 hours in seconds
IPAPI_RATE_LIMIT_DELAY=1000         # 1 second between batch requests
ENABLE_GEOLOCATION=true
GEOLOCATION_FALLBACK=true

# Yjs/CRDT Configuration
YJS_WEBSOCKET_PATH=/yjs
YJS_ROOM_CLEANUP_INTERVAL=300000    # 5 minutes
YJS_ENABLE_GC=true
YJS_PERSISTENCE_ENABLED=true
COLLABORATION_ROOM_TIMEOUT=1800000  # 30 minutes
YJS_DOC_UPDATE_DEBOUNCE=1000        # 1 second

# WebSocket Configuration
WS_CORS_ORIGIN=http://localhost:3000
WS_HEARTBEAT_INTERVAL=30000        # 30 seconds
WS_MAX_CONNECTIONS_PER_ROOM=50

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000        # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100
ROOM_CREATION_RATE_LIMIT=5         # 5 rooms per window

# File Upload (if needed for code files)
MAX_FILE_SIZE=10485760             # 10MB
ALLOWED_FILE_TYPES=js,ts,py,java,cpp,html,css,json